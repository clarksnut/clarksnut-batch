<?xml version="1.0" encoding="UTF-8"?>
<job id="collect_messages" restartable="true" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/jobXML_1_0.xsd"
     version="1.0">
    <flow id="start" next="end">
        <step id="refreshLinkedBrokers" next="pullMailMessages">
            <chunk>
                <reader ref="jpaItemReader">
                    <properties>
                        <property name="namedQuery" value="batch_getAllUsersWithOfflineToken"/>
                        <property name="beanType" value="org.clarksnut.models.jpa.entity.UserEntity"/>
                    </properties>
                </reader>
                <processor ref="refreshLinkedBrokersProcessor"/>
                <writer ref="refreshLinkedBrokersWriter"/>
            </chunk>
        </step>
        <step id="pullMailMessages">
            <chunk>
                <reader ref="jpaItemReader">
                    <properties>
                        <property name="namedQuery" value="batch_getAllLinkedBrokers"/>
                        <property name="beanType" value="org.clarksnut.models.jpa.entity.UserLinkedBrokerEntity"/>
                    </properties>
                </reader>
                <processor ref="pullMailMessagesProcessor"/>
                <writer ref="pullMailMessagesWriter"/>
            </chunk>
        </step>
    </flow>
    <step id="end">
        <batchlet ref="endBatchlet"/>
        <end on="COMPLETED"/>
    </step>
</job>