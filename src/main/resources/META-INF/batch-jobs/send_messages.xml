<?xml version="1.0" encoding="UTF-8"?>
<job id="send_messages" restartable="true" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/jobXML_1_0.xsd"
     version="1.0">
    <flow id="start" next="end">
        <step id="groupFiles" next="sendGroupFiles">
            <chunk>
                <reader ref="jpaItemReader">
                    <properties>
                        <property name="namedQuery" value="batch_getAllNotGroupedFiles"/>
                        <property name="beanType" value="org.clarksnut.models.jpa.entity.FileEntity"/>
                    </properties>
                </reader>
                <writer ref="groupFilesWriter"/>
            </chunk>
        </step>
        <step id="sendGroupFiles">
            <chunk>
                <reader ref="jpaItemReader">
                    <properties>
                        <property name="namedQuery" value="batch_getAllNotSentGroupFiles"/>
                        <property name="beanType" value="org.clarksnut.models.jpa.entity.GroupFileEntity"/>
                    </properties>
                </reader>
                <processor ref="sendGroupFilesProcessor"/>
                <writer ref="sendGroupFilesWriter">
                    <properties>
                        <property name="restUrl" value="#{jobParameters['clarksnutDocumentApiUrl']}"/>
                        <property name="mediaType" value="multipart/form-data"/>
                    </properties>
                </writer>
            </chunk>
        </step>
    </flow>
    <step id="end">
        <batchlet ref="endBatchlet"/>
        <end on="COMPLETED"/>
    </step>
</job>